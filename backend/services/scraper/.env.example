# Scraper Service Environment Configuration
# Copy to .env and configure your settings

# Scraper Configuration
SCRAPE_DELAY=2000
MAX_SCRAPE_PAGES=20
SCRAPE_TIMEOUT=30000
SCRAPE_MAX_RETRIES=3
LOG_LEVEL=info

# Browser Configuration
HEADLESS=true
USER_AGENT=Mozilla/5.0 (compatible; WebScraper/1.0)

# Proxy Configuration (optional)
# PROXY_URL=http://proxy-server:port
# PROXY_URL=socks5://proxy-server:port

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DELAY=2000
RATE_LIMIT_MAX_REQUESTS_PER_MINUTE=30

# Robots.txt Compliance
RESPECT_ROBOTS_TXT=true
ROBOTS_TXT_TIMEOUT=10000

# Error Handling
MAX_RETRIES=3
RETRY_DELAY_MULTIPLIER=2

# Logging
LOG_LEVEL=info
LOG_FILE=scraper.log
LOG_FORMAT=json

# Performance
BLOCK_RESOURCES=true
BLOCKED_RESOURCES=image,font,media,stylesheet
PAGE_TIMEOUT=30000
WAIT_FOR_SELECTOR_TIMEOUT=15000
