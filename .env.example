# .env.example - Environment configuration template for Marketplace Aggregator

# ===== CORE APPLICATION SETTINGS =====

# Application environment
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# ===== DATABASE CONFIGURATION =====

# PostgreSQL connection string
DATABASE_URL=postgresql://username:password@localhost:5432/market_aggregator

# ===== REDIS CONFIGURATION =====

# Redis connection string for job queues
REDIS_URL=redis://localhost:6379

# ===== WORKER CONFIGURATION =====

# Number of concurrent scraping jobs
WORKER_CONCURRENCY=2

# Playwright browser settings
PLAYWRIGHT_HEADLESS=true

# ===== PRODUCT MATCHING & PRICING =====

# Base currency for price conversion
BASE_CURRENCY=USD

# Currency exchange rates (JSON format)
FX_JSON={"USD":1,"EUR":1.09,"PKR":0.0036}

# Product matching confidence threshold (0.0 - 1.0)
MATCH_THRESHOLD=0.82

# ===== COMPLIANCE & RISK MANAGEMENT =====

# Override robots.txt restrictions (NOT recommended for production)
# WARNING: Use only for development/testing
OVERRIDE_ROBOTS=false

# Enable high-risk scrapers (social media sites, etc.)
# Requires both flags to be 'true' to work
# WARNING: May violate Terms of Service
ENABLE_HIGH_RISK_SCRAPERS=false

# Acknowledge Terms of Service risks
# Required in conjunction with ENABLE_HIGH_RISK_SCRAPERS
TOS_RISK_ACK=false

# Hash IP addresses for privacy (recommended for production)
HASH_IPS=false

# ===== SCRAPING PERFORMANCE =====

# Default timeout for HTTP requests (milliseconds)
REQUEST_TIMEOUT=30000

# Default delay between requests (milliseconds)
REQUEST_DELAY=1000

# Maximum concurrent requests
MAX_CONCURRENT=5

# User agent string for requests
USER_AGENT=Mozilla/5.0 (compatible; MarketAggregator/1.0)

# ===== LOGGING & MONITORING =====

# Log level: error, warn, info, debug
LOG_LEVEL=info

# Log format: json, simple
LOG_FORMAT=json

# Enable request logging
LOG_REQUESTS=true

# ===== SECURITY SETTINGS =====

# JWT secret for authentication
JWT_SECRET=your-super-secure-jwt-secret-key

# JWT expiration time
JWT_EXPIRES_IN=24h

# Admin password hash (generate with npm run generate-hash)
ADMIN_PASSWORD=your-admin-password-hash

# Disable SSL certificate verification (NOT recommended)
IGNORE_SSL=false

# Proxy settings (if needed)
# HTTP_PROXY=http://proxy.example.com:8080
# HTTPS_PROXY=https://proxy.example.com:8080

# ===== CACHE SETTINGS =====

# Cache TTL in seconds
CACHE_TTL=3600

# Robots.txt cache TTL in seconds
ROBOTS_CACHE_TTL=86400

# ===== DEVELOPMENT SETTINGS =====

# Enable debug output
DEBUG=false

# Bypass all compliance checks (DEVELOPMENT ONLY)
# WARNING: Never use in production
BYPASS_COMPLIANCE=false

# ===== OPTIONAL FEATURES =====

# Enable email notifications
ENABLE_EMAIL=false

# SMTP configuration (if email enabled)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Enable click tracking analytics
ENABLE_CLICK_TRACKING=true

# Enable product matching service
ENABLE_PRODUCT_MATCHING=true