{
  "name": "web-scraper-compliance",
  "version": "1.0.0",
  "description": "Web scraper with comprehensive compliance features",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "NODE_ENV=development nodemon index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "scrape": "node cli.js",
    "scrape:safe": "OVERRIDE_ROBOTS=false node cli.js",
    "scrape:dev": "OVERRIDE_ROBOTS=true LOG_LEVEL=debug node cli.js",
    "compliance:check": "node -e \"console.log('Compliance settings:'); console.log('OVERRIDE_ROBOTS:', process.env.OVERRIDE_ROBOTS || 'false'); console.log('ENABLE_HIGH_RISK_SCRAPERS:', process.env.ENABLE_HIGH_RISK_SCRAPERS || 'false'); console.log('TOS_RISK_ACK:', process.env.TOS_RISK_ACK || 'false');\"",
    "robots:clear-cache": "node -e \"require('./backend/services/robotsService').clearCache(); console.log('Robots cache cleared');\"",
    "robots:stats": "node -e \"console.log(require('./backend/services/robotsService').getCacheStats());\"",
    "sites:list": "node -e \"const fs = require('fs'); const sites = fs.readdirSync('./backend/config/sites').map(f => f.replace('.json', '')); console.log('Available sites:'); sites.forEach(s => console.log('  -', s));\"",
    "sites:validate": "node scripts/validate-site-configs.js",
    "setup:env": "cp .env.example .env && echo 'Created .env file from template'",
    "setup:session-example": "node cli.js --create-session-example",
    "security:audit": "npm audit",
    "security:check-env": "node scripts/check-security.js"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "puppeteer": "^21.5.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "backend/**/*.js",
      "!backend/tests/**",
      "!backend/node_modules/**"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/__tests__/**/*.js"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "prefer-const": "error"
    }
  },
  "keywords": [
    "web-scraping",
    "compliance",
    "robots.txt",
    "automation",
    "data-extraction"
  ],
  "author": "Saif Ali",
  "license": "MIT"
}
